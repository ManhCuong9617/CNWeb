@model FashionShop.Areas.Admin.Models.DTO.GroupDetailDTO
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section jsFooter{
    <script src="~/assets/admin/js/updateAdmin.js"></script>
}
<div id="page-wrapper">
    <div class="col-md-12">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-3" for="ma">Mã loại sản phẩm: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="ma" value="@Model.groupDetail.maLoaiSanPham" readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="ten">Tên loại sản phẩm: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="ten" value="@Model.groupDetail.tenLoaiSanPham">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="tittle">Meta Tittle: </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="tittle" value="@Model.groupDetail.meta_tittle">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="manhom">Nhóm sản phẩm: </label>
                <div class="col-sm-9">
                    <select class="form-control tenloai" id="manhom">
                        @foreach (var item in Model.listGroupPr)
                        {
                            if (item.maNhom == Model.groupDetail.nhomMa)
                            {
                                <option value="@item.maNhom" selected>@item.tenNhom</option>
                            }
                            else
                            {
                                <option value="@item.maNhom">@item.tenNhom</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <button type="button" class="btn btn-default" id="btnUpdateGroupDetail">Lưu thay đổi</button>
        </div>

    </div>
</div>

